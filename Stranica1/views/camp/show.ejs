<% include ../partials/header %>
<h1><%= camp.name %></h1>
<img src="<%= camp.imgurl %>" alt="nema" width="50%">
<p><%= camp.description %></p>
<% if(qurentuser && camp.author.id.equals(qurentuser._id)){ %>
<a class="btn btn-warning" href="/camp/<%= camp._id %>/edit">Edit</a>
<form action="/camp/<%= camp._id %>?_method=DELETE" method="POST">
<button class="btn btn-danger">Delete</button>

</form>
<% }%>
<p>
    
    <em>Submited by :<%= camp.author.name %></em></p>
<% camp.comment.forEach((comm)=>{ %>

<h1><%= comm.text %></h1>
<br>
<p><%= comm.author.username%></p>
<% if(qurentuser && comm.author.id.equals(qurentuser._id)){ %>
<a class="btn btn-xs btn-warning" href="/camp/<%=camp._id%>/comment/<%=comm._id%>/edit">EDIT</a>
<form action="/camp/<%=camp._id%>/comment/<%=comm._id%>?_method=DELETE" method="POST">

    <input type="submit" value="DELETE" class="btn btn-xs btn-danger">
</form>

<% }%>

<% }) %>

<a href="/camp/<%= camp._id %>/comment/new">Add new comment </a>

<% include ../partials/footer %>